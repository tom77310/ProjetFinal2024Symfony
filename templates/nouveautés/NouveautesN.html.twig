{% extends 'base.html.twig' %}

{% block body %}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./CSS/PagePagroduitNouveautes.css">
  <title>Nouveau Wagon Fret Taille N</title>
</head>

<body>
    <div class="titre">
        <a href={{ path('app_nouveautes') }}>Retour vers les Nouveautés</a>
         {% for Produits in ProduitsN %}
        <h1> {{Produits.nom}}</h1>
    </div>
<div class="NouveauFretTailleN">
<img src={{ asset('Images/Nouveautés/') ~ Produits.Vue1 }} alt="NouveauFret" id="NouveauFretTailleNVue1">
<div class="droite">
<p> Prix unitaire : {{Produits.prix}} €</p>
{% if app.user %}

    <a href={{ path('app_ajoutpanier', {id: Produits.id}) }}>Ajouter au panier</a>

    {% else %}

       <a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>

{% endif %}
</div>
</div>
<div class="descriptionNNouveauFret">
    <p>
   <span class="titre_description">Description du Produit :</span>  <br>
{{Produits.detail}}
    </p>
</div>

{% endfor %}

</body>
</html>
{% endblock %}
               





