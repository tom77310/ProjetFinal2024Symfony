{% extends 'base.html.twig' %}

{% block body %}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
    <link rel="stylesheet" href="{{ asset('CSS/PageProduitLoco.css') }}">
   <title>Locomotive a Vapeur Taille N</title>
</head>

<body>

    <div class="titre">
        <a href={{ path('app_locovapeur') }}>Retour vers les Locomotives a Vapeurs</a>
        {% for Produits in ProduitN %}
        <h1>{{Produits.nom}}</h1>
    </div>

    <!-- Carrousel -->
    <div id="carousel-container">
  <div id="carousel">
    <div class="carousel-item">
             <img src={{ asset('images/Locomotives/Vapeur/TailleN/') ~ Produits.Vue1  }} alt="LocoVapeurTailleNvue1" id="LocoVapeurTailleNVue1">
    </div>
    <div class="carousel-item">
        <img src={{ asset('images/Locomotives/Vapeur/TailleN/') ~ Produits.Vue2  }} alt="LocoVapeurTailleNvue2" id="LocoVapeurTailleNVue2">
    </div>
    <div class="carousel-item">
    <img src={{ asset('images/Locomotives/Vapeur/TailleN/') ~ Produits.Vue3  }} alt="LocoVapeurTailleNvue3" id="LocoVapeurTailleNVue3">
    </div>
    <div class="carousel-item">
    <img src={{ asset('images/Locomotives/Vapeur/TailleN/') ~ Produits.Vue4  }} alt="LocoVapeurTailleNvue4" id="LocoVapeurTailleNVue4">
    </div>
   </div>
</div>
<div class="bouton">
    <button id="prev-btn" onclick="prevSlide()">Précédent</button>
    <button id="next-btn" onclick="nextSlide()">Suivant</button>
</div>
<div class="droiteNVapeur">
<p> Prix unitaire : {{Produits.prix}} €</p>
{% if app.user %}
    <a href={{ path('app_ajoutpanier', {id: Produits.id}) }}>Ajouter au panier</a>
    {% else %}
       <a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>
{% endif %}
</div>
<div class="descriptionNVapeur">
    <p>
   <span class="titre_description">Description du Produit :</span>  <br>

{{Produits.detail}}


    </p>
</div>
{% endfor %}


<script src={{ asset('js/Carrousel.js') }} ></script>
</body>
</html>
{% endblock %}