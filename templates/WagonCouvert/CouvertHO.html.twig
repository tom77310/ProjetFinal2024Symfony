{% extends 'base.html.twig' %}

{% block body %}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./CSS/PageProduit.css">
    <link rel="stylesheet" href="./CSS/Carrousel.css">
  <title>Wagon de Fret Couvert Taille HO</title>
</head>

<body>
    <div class="titre">

        <a href={{ path("app_WagonCouvert") }}>Retour vers les Wagons Couvert</a>
            {% for Produits in CouvertHO %}
        <h1>{{Produits.nom}}</h1>
    </div>
    <!-- Carrousel -->
<div id="carousel-container">
  <div id="carousel">
    <div class="carousel-item">
    <img src={{ asset('Images/WagonFret/Couvert/TailleHO/') ~ Produits.Vue1 }} alt="CouvertTailleHOVue1" id="CouvertTailleHOVue1">
    </div>
    <div class="carousel-item">
    <img src={{ asset('Images/WagonFret/Couvert/TailleHO/') ~ Produits.Vue2 }} alt="CouvertTailleHOVue2" id="CouvertTailleHOVue2">
    </div>
    <div class="carousel-item">
    <img src={{ asset('Images/WagonFret/Couvert/TailleHO/') ~ Produits.Vue3 }} alt="CouvertTailleHOVue3" id="CouvertTailleHOVue3">
    </div>
    <div class="carousel-item">
    <img src={{ asset('Images/WagonFret/Couvert/TailleHO/') ~ Produits.Vue4 }} alt="CouvertTailleHOVue4" id="CouvertTailleHOVue4">
    </div>
  </div>
</div>
<div class="bouton">
    <button id="prev-btn" onclick="prevSlide()">Précédent</button>
    <button id="next-btn" onclick="nextSlide()">Suivant</button>
</div>
<div class="droite">
<p> Prix unitaire : {{Produits.prix}} €</p>
 {% if app.user %}

    <a href={{ path('app_ajoutpanier', {id: Produits.id}) }}>Ajouter au panier</a>

    {% else %}

       <a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>

{% endif %}</div>
<div class="description">
    <p>
   <span class="titre_description">Description du Produit :</span>  <br>
{{Produits.detail}}
    </p>

</div>

{% endfor %}

</body>

<script src="./js/Carrousel.js"></script>

</html>

{% endblock %}





      



