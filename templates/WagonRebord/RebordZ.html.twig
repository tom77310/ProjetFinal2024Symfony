{% extends 'base.html.twig' %}

{% block body %}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./CSS/PageProduit.css">
    <link rel="stylesheet" href="./CSS/Carrousel.css">
  <title>Wagon de Fret Rebord Taille Z</title>
</head>

<body>
    <div class="titre">
        <a href={{ path("app_WagonRebord") }}>Retour vers les Wagons à Rebord</a>
        {% for Produits in ProduitsZ %}
        <h1>{{Produits.nom}}</h1>
    </div>
    <!-- Carrousel -->
<div id="carousel-container">
  <div id="carousel">
    <div class="carousel-item">
    <img src={{ asset('Images/WagonFret/Rebord/TailleZ/')~ Produits.Vue1 }} alt="RebordTailleZVue1" id="RebordTailleZVue1">
    </div>
    <div class="carousel-item">
    <img src={{ asset('Images/WagonFret/Rebord/TailleZ/')~ Produits.Vue2 }} alt="RebordTailleZVue2" id="RebordTailleZVue2">
    </div>
    <div class="carousel-item">
    <img src={{ asset('Images/WagonFret/Rebord/TailleZ/')~ Produits.Vue3 }} alt="RebordTailleZVue3" id="RebordTailleZVue3">
    </div>
    <div class="carousel-item">
    <img src={{ asset('Images/WagonFret/Rebord/TailleZ/')~ Produits.Vue4 }} alt="RebordTailleZVue4" id="RebordTailleZVue4">
    </div>
  </div>
</div>
<div class="bouton">
    <button id="prev-btn" onclick="prevSlide()">Précédent</button>
    <button id="next-btn" onclick="nextSlide()">Suivant</button>
</div>
<div class="droite">
<p> Prix unitaire : {{Produits.prix}} €</p>

{% if app.user %}

    <a href={{ path('app_ajoutpanier', {id: Produits.id}) }}>Ajouter au panier</a>

    {% else %}

       <a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>

{% endif %}
</div>
<div class="descriptionZRebord">
    <p>
   <span class="titre_description">Description du Produit :</span>  <br>
{{Produits.detail}}
    </p>

</div>

{% endfor %}
</body>

<script src="./js/Carrousel.js"></script>

</html>

{% endblock %}