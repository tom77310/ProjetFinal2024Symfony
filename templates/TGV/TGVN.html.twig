{% extends 'base.html.twig' %}

{% block body %}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./CSS/PageProduitAutomotrices.css">
    <link rel="stylesheet" href="./CSS/Carrousel.css">
  <title>TGV Taille N</title>
</head>

<body>

    <div class="titreNTGV">
        <a href={{ path('app_TGV') }}>Retour vers les TGV</a>
         {% for Produits in ProduitsN %}
        <h1>{{Produits.nom}}</h1>
    </div>
    <!-- Carrousel -->

<div id="carousel-container">
  <div id="carousel">
    <div class="carousel-item">
<img src={{ asset('Images/TGV/TailleN/')  ~ Produits.Vue1}} alt="TGVTailleNVue1" id="TGVTailleNVue1">
    </div>
    <div class="carousel-item">
<img src={{ asset('Images/TGV/TailleN/') ~ Produits.Vue2 }} alt="TGVTailleNVue2" id="TGVTailleNVue2">
    </div>
  </div>
</div>
<div class="bouton">
    <button id="prev-btn" onclick="prevSlide()">Précédent</button>
    <button id="next-btn" onclick="nextSlide()">Suivant</button>
</div>
<div class="droite">
<p> Prix unitaire : {{Produits.prix}} €</p>

{% if app.user %}

    <a href={{ path('app_ajoutpanier', {id: Produits.id}) }}>Ajouter au panier</a>

    {% else %}

       <a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>

       {% endif %}
</div>
<div class="descriptionNTGV">
    <p>
   <span class="titre_description">Description du Produit :</span>  <br>
{{Produits.detail}}
    </p>
</div>
{% endfor %}
</body>
<script src="./js/Carrousel.js"></script>
</html>
{% endblock %}