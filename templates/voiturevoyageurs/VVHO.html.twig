{% extends 'base.html.twig' %}

{% block body %}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./CSS/PageProduitVoituresVoy.css">
    <link rel="stylesheet" href="./CSS/Carrousel.css">
   <title>Voiture de Voyageurs Taille HO</title>
</head>

<body>
    <div class="titre">
        <a href={{ path('app_VV') }}>Retour vers les Voitures de Voyageurs</a>
        {% for Produits in ProduitsHO %}
  <h1>{{Produits.nom}}</h1>
    </div>
    <!-- Carrousel -->
<div id="carousel-container">
  <div id="carousel">
    <div class="carousel-item">
    <img src={{ asset('Images/VoitureVoyageurs/TailleHO/') ~ Produits.Vue1 }} alt="VoitureVoyageursTailleHOVue1" id="VoituresVoyageursTailleHOVue1">
    </div>
    <div class="carousel-item">
    <img src={{ asset('Images/VoitureVoyageurs/TailleHO/') ~ Produits.Vue2 }} alt="VoitureVoyageursTailleHOVue2" id="VoituresVoyageursTailleHOVue2">
    </div>
    <div class="carousel-item">
    <img src={{ asset('Images/VoitureVoyageurs/TailleHO/') ~ Produits.Vue3 }} alt="VoitureVoyageursTailleHOVue3" id="VoituresVoyageursTailleHOVue3">
    </div>
    <div class="carousel-item">
    <img src={{ asset('Images/VoitureVoyageurs/TailleHO/') ~ Produits.Vue4 }} alt="VoitureVoyageursTailleHOVue4" id="VoituresVoyageursTailleHOVue4">
    </div>
  </div>
</div>
<div class="bouton">
    <button id="prev-btn" onclick="prevSlide()">Précédent</button>
    <button id="next-btn" onclick="nextSlide()">Suivant</button>
</div>
<div class="droite">
<p> Prix unitaire : {{Produits.prix}} €</p>

{% if app.user %}

    <a href={{ path('app_ajoutpanier', {id: Produits.id}) }}>Ajouter au panier</a>

    {% else %}

       <a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>

{% endif %}
</div>
<div class="descriptionHOVoy">
    <p>
  <span class="titre_description">Description du Produit :</span>  <br>
{{Produits.detail}}
   </p>
</div>
{% endfor %}

</body>
<script src="./js/Carrousel.js"></script>
</html>
{% endblock %}