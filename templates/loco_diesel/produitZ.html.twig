{% extends 'base.html.twig' %}

{% block body %}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="{{ asset('CSS/Carrousel.css') }}">
    <link rel="stylesheet" href="{{ asset('CSS/PageProduitLoco.css') }}">
   <title>Locomotive Diesel Taille Z</title>
</head>

<body>

    <div class="titre">
        <a href={{ path('app_locodiesel') }}>Retour vers les Locomotives Diesel</a>
        {% for Produits in ProduitZ %}
            <h1>{{Produits.nom}}</h1>
    </div>

    <!-- Carrousel -->
    <div id="carousel-container">
  <div id="carousel">
    <div class="carousel-item">
             <img src={{ asset('images/Locomotives/Diesel/TailleZ/') ~ Produits.Vue1  }} alt="LocoDieselTailleZvue1" id="LocoDieselTailleZVue1">
    </div>
    <div class="carousel-item">
        <img src={{ asset('images/Locomotives/Diesel/TailleZ/') ~ Produits.Vue2  }} alt="LocoDieselTailleZvue2" id="LocoDieselTailleZVue2">
    </div>
   </div>
</div>
<div class="bouton">
    <button id="prev-btn" onclick="prevSlide()">Précédent</button>
    <button id="next-btn" onclick="nextSlide()">Suivant</button>
</div>
<div class="droite">

<p> Prix unitaire : {{Produits.prix}} €</p>
{% if app.user %}

    <a href={{ path('app_ajoutpanier', {id: Produits.id}) }}>Ajouter au panier</a>

    {% else %}

       <a href={{ path('app_login') }}>Connectez-vous pour ajouter cet article a votre panier</a>

{% endif %}
</div>
<div class="descriptionZDiesel">
    <p>
   <span class="titre_description">Description du Produit :</span>  <br>

{{Produits.detail}}


    </p>
</div>
{% endfor %}

<script src={{ asset('js/Carrousel.js') }} ></script>
</body>
</html>
{% endblock %}